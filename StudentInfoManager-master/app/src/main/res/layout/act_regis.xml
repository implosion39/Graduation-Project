<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_margin="@dimen/spacing_normal"
    android:padding="@dimen/spacing_normal">

    <TableRow>

        <TextView
            android:layout_marginRight="@dimen/spacing_larger"
            android:text="用户名:"
            android:textColor="@android:color/black"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/act_reigs_user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_large"/>
    </TableRow>

    <TableRow>

        <TextView
            android:layout_marginRight="@dimen/spacing_larger"
            android:text="密码:"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_large"/>

        <EditText
            android:id="@+id/act_regis_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_large"/>
    </TableRow>
    <LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/act_regis_regis"
            android:text="注册"></Button>
    </LinearLayout>
    <LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/act_regis_back"
            android:text="返回"></Button>
    </LinearLayout>
</TableLayout>